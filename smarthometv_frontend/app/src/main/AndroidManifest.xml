<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TV apps must explicitly state that touchscreen is not required -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <!-- Declare Leanback support as required for Android TV -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:label="@string/app_name"
        android:banner="@drawable/banner">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartHomeTV">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- For TV launchers -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <!-- Do not include LAUNCHER to avoid mobile launcher exposure -->
            </intent-filter>
        </activity>
    </application>
</manifest>
